<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/remote_LntLong"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:elevation="6dp"
        android:gravity="center"
        android:text="Place Calling SOS"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/remote_user2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="84dp"
        android:elevation="6dp"
        android:gravity="center"
        android:text="Incoming voice call"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pic22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:tint="#2F006064"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_image" />


    <TextView
        android:id="@+id/call_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="5dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Swipe Up to attain call"
        android:textColor="@android:color/background_light"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/attend_call"
        app:layout_constraintStart_toStartOf="@+id/attend_call" />

    <TextView

        android:id="@+id/msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="5dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Swipe up to message"
        android:textColor="@android:color/background_light"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/call_msg"
        app:layout_constraintStart_toStartOf="@+id/call_msg" />

    <TextView
        android:id="@+id/reject_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Swipe Up to reject call"
        android:textColor="@android:color/background_light"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/reject_call"
        app:layout_constraintStart_toStartOf="@+id/reject_call" />

    <ImageView
        android:id="@+id/attend_call"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/phonecircle2"
        android:elevation="5dp"
        android:padding="17dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/call_txt"
        app:layout_constraintEnd_toStartOf="@+id/call_msg"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toEndOf="@+id/reject_call"
        app:srcCompat="@drawable/call_answer" />

    <ImageView
        android:id="@+id/reject_call"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/phonecircle"
        android:elevation="5dp"
        android:padding="15dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/reject_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rejecting"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/call_msg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_destination"
        android:elevation="5dp"
        android:padding="15dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/msg_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_destination"
        android:layout_marginRight="24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/otheruser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="00000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remote_user2" />

</android.support.constraint.ConstraintLayout>